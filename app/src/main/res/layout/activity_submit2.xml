<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitActivity2">





    <TextView
        android:id="@+id/tv_the_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILL IN THE DETAILS!!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />




    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_the_details_id"
        android:layout_marginTop="30dp"
        android:id="@+id/et_type_of_jobs_id"
        android:hint="What type of job are you good at? (state)"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />




    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_type_of_jobs_id"
        android:layout_marginTop="30dp"
        android:id="@+id/et_location2_id"
        android:hint="Location"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        />


    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_location2_id"
        android:layout_marginTop="30dp"
        android:id="@+id/et_describe_id"
        android:hint="What type of an employer would you prefer? (Describe)"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_describe_id"
        android:layout_marginTop="50dp"
        android:text="Next"
        android:id="@+id/bt_next2_id"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:backgroundTint="#00FFFF"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"/>



</RelativeLayout>